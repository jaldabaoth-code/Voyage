{% extends 'layout.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
    <form method="post" class="my-5">
        <div class="container col-6 d-flex justify-content-center">
            <div class="col-12">
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label class="h6" for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control p-2 mb-1" autocomplete="email" required autofocus>
                <label class="h6" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control p-2 mb-1" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-primary mb-5 col-12" type="submit">
                    Se Connecter
                </button>
            </div>
        </div>
    </form>
{% endblock %}
